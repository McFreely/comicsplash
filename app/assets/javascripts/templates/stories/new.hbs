<div class="container">
	<form class="form-horizontal col-md-6 col-md-offset-3 submit-form" role="form">
		  <div class="form-group">
		    <label  class="col-sm-2 control-label">Title</label>
		    <div class="col-sm-10">
		      {{ view Ember.TextField value=fields.title class="form-control col-sm-10" placeholder="The title goes here"}}
		      {{#each error in errors.title}}
			    <p class="text-danger">Title {{error}}</p>
			  {{/each}}
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="col-sm-2 control-label">Link</label>
		    <div class="col-sm-10">
		      {{ view Ember.TextField value=fields.link class="form-control col-sm-10" placeholder="http://example.com"}}
		      {{#each error in errors.link}}  
			  <p class="text-danger">Link {{error}}</p>
			  {{/each}}
		    </div>
		  </div>
		  
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default" value="Submit Your Story" {{action "createStory"}}>Submit</button>
		    </div>
		  </div>
	</form>
</div>