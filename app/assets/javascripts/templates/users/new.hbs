<div class="container">
	<h2 class="col-md-6 col-md-offset-3 center">Registration</h2>
	<form class="form-horizontal col-md-6 col-md-offset-3 submit-form" role="form">

		  <div class="form-group">
		    <label  class="col-sm-2 control-label">Email:</label>
		    <div class="col-sm-10">
		      {{ view Ember.TextField value=email class="form-control col-sm-10"}}
		    </div>
		  </div>

			<div class="form-group">
				<label  class="col-sm-2 control-label">Username:</label>
				<div class="col-sm-10">
					{{ view Ember.TextField value=username class="form-control col-sm-10"}}
				</div>
			</div>

		  <div class="form-group">
		    <label class="col-sm-2 control-label">Password:</label>
		    <div class="col-sm-10">
		      {{ view Ember.TextField value=password class="form-control col-sm-10" type="password"}}
		    </div>
		  </div>

		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-default" value="users.new" {{action "register"}}>Register</button>
		    </div>
		  </div>
	</form>
</div>
